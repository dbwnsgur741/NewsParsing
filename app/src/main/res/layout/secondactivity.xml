<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/default_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:elevation="5dp"
        android:id="@+id/msq_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#000000">

        <TextView
            android:id="@+id/msq_detail_toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/seoulhangangcb"
            android:textSize="18sp"
            android:text="환경오염의종류"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_marginTop="53dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow" />

    <TextView
        android:lineSpacingExtra="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/seoulhangangcb"
        android:id="@+id/msq_detail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환경오염의종류"/>

    <LinearLayout
        android:id="@+id/num1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/seoulhangangcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 대기오염"
                android:layout_weight="80"/>

            <ImageView

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:fontFamily="@font/seoulhangangceb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/대기오염정의"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/seoulhangangcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 수질오염"
                android:layout_weight="80"/>

            <ImageView

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:fontFamily="@font/seoulhangangceb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/수질오염정의"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="430dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/seoulhangangcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 토양오염"
                android:layout_weight="80"/>

            <ImageView

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:fontFamily="@font/seoulhangangceb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/토양오염정의"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num4"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="530dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/seoulhangangcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 기타오염"
                android:layout_weight="80"/>

            <ImageView

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:fontFamily="@font/seoulhangangceb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/기타오염정의"/>

    </LinearLayout>

</RelativeLayout>